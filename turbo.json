{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env .*local"
  ],
  "globalEnv": ["NEXTAUTH_SECRET","NEXTAUTH_URL","JWT_SECRET"],
  "pipeline": {
    "build": {
      "dependsOn": [
        "db:generate",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "dependsOn": [
        "db:generate",
        "^dev"
      ],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}