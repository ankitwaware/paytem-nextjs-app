{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "JWT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "generate",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "inputs": [
        ".env",
        ".env.local"
      ],
      "env": [
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "JWT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "dependsOn": [
        "generate"
      ],
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "generate": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "studio": {
      "dependsOn": [
        "^studio"
      ],
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "start:web": {
      "cache": false,
      "inputs": [
        ".env"
      ]
    },
    "db:push": {
      "cache": false
    }
  }
}